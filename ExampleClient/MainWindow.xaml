<Window x:Class="DHaven.ExampleClient.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:DHaven.ExampleClient"
        xmlns:DisCarta="clr-namespace:DHaven.DisCarta;assembly=DHaven.DisCarta"
        mc:Ignorable="d"
        Title="MainWindow" Height="350" Width="525">
    <Window.Resources>
        <DisCarta:GeoArea x:Key="World">
            <DisCarta:GeoArea.NorthWest>
                <DisCarta:GeoPoint Latitude="85.051129" Longitude="-180"/>
            </DisCarta:GeoArea.NorthWest>
            <DisCarta:GeoArea.Size>
                <DisCarta:GeoVector DeltaLatitude="170.102258" DeltaLongitude="360"/>
            </DisCarta:GeoArea.Size>
        </DisCarta:GeoArea>
    </Window.Resources>
    <Grid>
        <DisCarta:Map>
            <DisCarta:MapLayer Background="Blue">
                <Image Source="World.png" DisCarta:Geo.Area="{StaticResource World}"/>
            </DisCarta:MapLayer>
        </DisCarta:Map>
    </Grid>
</Window>
